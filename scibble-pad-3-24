function myFunction() {
    var text3 = ""; var text2 = ""; var text1 = "";
    var i = 10;
    while (i > 0) {
        text3 += "<br>The number is " + i * 1000;
        text1 += '<br>' + i + '-second chunked stream';
        text2 += "<br>The number is " + i;
        i--;
    }
    document.getElementById("demo").innerHTML = text1;


function runLoop(){
	var i=0;
	while (i > 0) {
		setTimeout(function(){
		  	console.log(i + '-second chunked stream');
		  	html = '<h5>This is a chunked respo1nse after ' + i + 'seconds. The server should not close the stream before all chunks are sent to a client.</h5>';
		  	servResp.write(html);
		    // since this is the last chunk, close the stream.
		    html =
		        '</body>' +
		            '</html';
		    servResp.end(html);
		  }, i * 1000);
		i--;
	}
}

function myFunction() {
    var text3 = ""; var text2 = ""; var text1 = "";
    var i = 10;
    while (i > 0) {
        if (i > 1) {
        	text += "<br>The number is " + i * 1000;	
        }
        else {
        	text += "<br>Last number is " + i * 1000;
        }	
        i--;
    }



