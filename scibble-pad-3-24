function myFunction() {
    var text = "";
    var i = 10;
    while (i > 0) {
        if (i > 1) {
        	text += "<br>The number is " + i * 1000;	
        }
        else {
        	text += "<br>Last number is " + i * 1000;
        }	
        i--;
    }
    document.getElementById("demo").innerHTML = text;
}
